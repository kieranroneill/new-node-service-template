{
  "name": "new-service-template",
  "version": "1.0.0",
  "description": "A template for new Node.js services",
  "main": "dist/index.js",
  "author": "Kieran O'Neill <kieran.oneill@protonmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts --ext .js",
    "prettier": "prettier --config .prettierrc --write \"server/**/*.{js,json,ts}\"",
    "start:dev": "ts-node-dev -r dotenv/config --respawn --transpile-only src/index.ts",
    "test": "NODE_ENV=test jest --runInBand",
    "test:local": "./scripts/test.sh"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.10",
    "dotenv": "^8.2.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.2"
  }
}
